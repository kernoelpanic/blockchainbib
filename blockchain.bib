@inproceedings{neiheiser2021kauri,
	address = {New York, NY, USA},
	series = {{SOSP} '21},
	title = {Kauri: {Scalable} {BFT} {Consensus} with {Pipelined} {Tree}-{Based} {Dissemination} and {Aggregation}},
