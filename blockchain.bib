@techreport{fitzi2021ofelimos,
	title = {Ofelimos: {Combinatorial} {Optimization} via {Proof}-of-{Useful}-{Work} {\textbackslash}{\textbackslash} {A} {Provably} {Secure} {Blockchain} {Protocol}},
